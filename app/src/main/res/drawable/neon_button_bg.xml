<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#00B8D4" /> <!-- Darker Cyan when pressed -->
            <corners android:radius="24dp" />
            <stroke android:width="1dp" android:color="#FFFFFF"/>
            <count>
                 <!-- Simple glow effect via shadow is hard in shape, relying on color -->
            </count>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#00E5FF"
                android:endColor="#2979FF"
                android:angle="45" />
            <corners android:radius="24dp" />
            <stroke android:width="0dp" android:color="#00000000"/>
        </shape>
    </item>
</selector>
