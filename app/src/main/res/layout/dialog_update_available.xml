<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        android:backgroundTint="#1E293B">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Icon/Emoji -->
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/update_icon_background"
                android:gravity="center"
                android:text="ðŸš€"
                android:textSize="48sp"
                android:layout_marginBottom="16dp"/>

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Available"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <!-- Version Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvCurrentVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v1.0"
                    android:textSize="14sp"
                    android:textColor="#94A3B8"
                    android:background="@drawable/version_badge_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â†’"
                    android:textSize="18sp"
                    android:textColor="#10B981"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"/>

                <TextView
                    android:id="@+id/tvNewVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v2.0"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/version_badge_new_background"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"/>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#334155"
                android:layout_marginBottom="16dp"/>

            <!-- Update Message -->
            <TextView
                android:id="@+id/tvUpdateMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A new version with exciting features and improvements is available!"
                android:textSize="16sp"
                android:textColor="#CBD5E1"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"/>

            <!-- Features List (Optional) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/features_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ¨ What's New:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#10B981"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Enhanced security features\nâ€¢ Improved performance\nâ€¢ Bug fixes and stability"
                    android:textSize="13sp"
                    android:textColor="#94A3B8"
                    android:lineSpacingExtra="2dp"/>

            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Update Now Button -->
                <Button
                    android:id="@+id/btnUpdateNow"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Update Now"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_update_now"
                    android:elevation="4dp"
                    android:layout_marginBottom="12dp"/>

                <!-- Go Back Button -->
                <Button
                    android:id="@+id/btnGoBack"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Go Back"
                    android:textSize="14sp"
                    android:textColor="#94A3B8"
                    android:background="@drawable/button_go_back"
                    style="?android:attr/borderlessButtonStyle"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
