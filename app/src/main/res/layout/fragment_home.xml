<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_modern"
    android:fillViewport="true"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <!-- Results Section -->
        <LinearLayout
            android:id="@+id/resultSummaryContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginBottom="24dp">
            
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ† Latest Results"
                android:textColor="#4ADE80"
                android:textStyle="bold"
                android:textSize="22sp"
                android:shadowColor="#059669"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:paddingBottom="12dp" />

             <androidx.recyclerview.widget.RecyclerView
                 android:id="@+id/rvHomeResults"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:clipToPadding="false"
                 android:paddingStart="4dp"
                 android:paddingEnd="4dp"
                 android:orientation="horizontal" />
        </LinearLayout>

        <!-- Header -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‡®ðŸ‡³ Indian Election News"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-black"
            android:textSize="26sp"
            android:layout_marginBottom="16dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <LinearLayout
            android:id="@+id/newsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

