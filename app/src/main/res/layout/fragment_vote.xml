<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Main Content -->
    <LinearLayout
        android:id="@+id/voteContentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/electionRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBatchVote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vote Selected Elections"
            android:padding="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:icon="@drawable/ic_vote"
            app:iconGravity="textStart"
            android:layout_marginTop="8dp"
            android:backgroundTint="#059669"/>
    </LinearLayout>

    <!-- Guest Login Overlay -->
    <FrameLayout
        android:id="@+id/guestOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80FFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_security"
                    app:tint="#1E3A8A"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login Required"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1E3A8A"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You must login to cast your vote."
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLoginFromVote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login Now"
                    android:backgroundTint="#1E3A8A"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

</FrameLayout>
