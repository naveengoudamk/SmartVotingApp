<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="4dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:strokeColor="#F3F4F6"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Top Row: Title + Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAdminFeedbackTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login Issue"
                    android:textColor="#111827"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <!-- User Info Subtitle -->
                <TextView
                    android:id="@+id/tvAdminFeedbackUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe â€¢ XXXX-1234"
                    android:textColor="#6B7280"
                    android:textSize="13sp"
                    android:textStyle="normal"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvAdminFeedbackStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textColor="#B45309"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_status_active"
                android:backgroundTint="#FEF3C7"/>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F3F4F6"
            android:layout_marginVertical="16dp"/>

        <!-- Content -->
        <TextView
            android:id="@+id/tvAdminFeedbackDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User description text goes here..."
            android:textColor="#374151"
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvAdminFeedbackDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dec 12, 10:30 AM"
            android:textColor="#9CA3AF"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"/>

        <!-- Admin Response (Modern 'Quoted' Style) -->
        <LinearLayout
            android:id="@+id/layoutAdminResponsePreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:paddingStart="12dp"
            android:background="@drawable/bg_left_border_accent"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Response"
                android:textColor="#059669"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tvAdminResponsePreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Response content..."
                android:textColor="#4B5563"
                android:textSize="14sp"
                android:textStyle="italic"/>
        </LinearLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnDeleteFeedback"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="#EF4444"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnResolveFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resolve"
                android:backgroundTint="#2563EB"
                android:textColor="#FFFFFF"
                app:cornerRadius="8dp"
                app:elevation="0dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
